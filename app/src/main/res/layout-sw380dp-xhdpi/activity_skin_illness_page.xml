<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/info"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#efefef"
    android:orientation="vertical"
    tools:context=".SkinIllness.SkinIllnessPage">


    <ImageView
        android:id="@+id/headerBg2"
        android:layout_width="match_parent"
        android:layout_height="107dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@color/textHomepage" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@color/colorPrimary"
        tools:layout_editor_absoluteX="0dp" />


    <ImageView
        android:id="@+id/image"
        android:layout_width="341dp"
        android:layout_height="168dp"
        android:layout_above="@+id/skinIllness_name"
        android:layout_centerHorizontal="true"
        android:adjustViewBounds="true"
        android:background="@color/colorPrimary"
        android:scaleType="fitXY" />

    <ImageView
        android:id="@+id/imageView37"
        android:layout_width="43dp"
        android:layout_height="54dp"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/pageLabel2"
        android:onClick="back"
        app:srcCompat="@drawable/ic_chevron_left_black_24dp" />

    <TextView
        android:id="@+id/textView51"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/pageLabel2"
        android:layout_below="@+id/pageLabel2"
        android:text="Click skin illness to see its details."
        android:textColor="@color/textHomepage1"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteX="166dp"
        tools:layout_editor_absoluteY="61dp" />

    <TextView
        android:id="@+id/pageLabel2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="31dp"
        android:layout_marginTop="26dp"
        android:text="Skin Illnesses"
        android:textColor="@color/textHomepage1"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView30"
        android:layout_width="110dp"
        android:layout_height="108dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="27dp"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/treatment_and_illness_whitebg" />

    <TextView
        android:id="@+id/skinIllness_name"
        android:layout_width="340dp"
        android:layout_height="46dp"
        android:layout_above="@+id/skinIllness_desc"
        android:layout_centerHorizontal="true"
        android:background="#96989b"
        android:padding="10dp"
        android:text="Skin Illness Name"
        android:textAlignment="viewStart"
        android:textColor="#fff"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/skinIllness_desc"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="290dp"
        android:text="Description"
        android:textAlignment="center"
        android:textColor="@android:color/background_dark"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/copyright"
        android:layout_width="174dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="17dp"
        android:gravity="center"
        android:text="Â© 2018 Kag-Aid"
        android:textColor="@color/textHomepage1"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/skinIllness_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/image"
        android:layout_alignTop="@+id/image"
        android:text="TextView" />

    <TextView
        android:id="@+id/symptoms"
        android:layout_width="342dp"
        android:layout_height="49dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/image"
        android:layout_marginBottom="225dp"
        android:text="Symptoms: "
        android:textStyle="italic" />


</RelativeLayout>