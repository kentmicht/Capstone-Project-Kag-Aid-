<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="20dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView24"
        android:layout_width="44dp"
        android:layout_height="28dp"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/doctor_contact"
        android:layout_marginEnd="327dp"
        app:srcCompat="@drawable/schedule_logo" />

    <TextView
        android:id="@+id/doctor_name"
        android:layout_width="292dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/imageView24"
        android:layout_marginTop="7dp"
        android:text="mar"
        android:textAlignment="textStart"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/doctor_contact"
        android:layout_width="291dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageView23"
        android:layout_marginStart="-328dp"
        android:layout_toEndOf="@+id/imageView23"
        android:text="contact"
        android:textSize="18sp" />

    <ImageView
        android:id="@+id/imageView23"
        android:layout_width="43dp"
        android:layout_height="31dp"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/doctor_name"
        android:layout_marginEnd="328dp"
        app:srcCompat="@drawable/phone_logo" />

    <TextView
        android:id="@+id/doctor_schedule"
        android:layout_width="290dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/imageView24"
        android:layout_marginStart="-327dp"
        android:layout_toEndOf="@+id/imageView24"
        android:text="sched"
        android:textAlignment="textStart"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/doctor_location"
        android:layout_width="297dp"
        android:layout_height="53dp"
        android:layout_below="@+id/imageView24"
        android:layout_marginStart="-327dp"
        android:layout_toEndOf="@+id/imageView24"
        android:text="loc"
        android:textAlignment="textStart"
        android:textSize="18sp" />

    <ImageView
        android:id="@+id/imageView25"
        android:layout_width="43dp"
        android:layout_height="28dp"
        android:layout_alignStart="@+id/imageView24"
        android:layout_below="@+id/imageView24"
        app:srcCompat="@drawable/location_logo" />

</RelativeLayout>