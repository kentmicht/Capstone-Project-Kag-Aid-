<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NearbyDoctorsDialog">

    <ListView
        android:id="@+id/doctorListView"
        android:layout_width="match_parent"
        android:layout_height="194dp"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="10sp"
        android:layout_below="@+id/markerName"></ListView>

    <TextView
        android:id="@+id/markerName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView50"
        android:paddingLeft="10sp"
        android:paddingBottom="10sp"
        android:text="Cebu Institute Of Medicine Community Medico - Social Services Primary Care and Lying - In Center : Plaridel Street, Mandaue City"
        android:textAlignment="textStart"
        android:textColor="@color/colorPrimary"
        android:textSize="17sp" />

    <TextView
        android:id="@+id/textView50"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/imageView33"
        android:paddingLeft="10sp"
        android:paddingTop="10sp"
        android:text="Doctors for:"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/errorDoctor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="288dp"
        android:text="No Doctors for this Marker"
        android:textSize="14sp"
        android:textStyle="italic" />

    <ImageView
        android:layout_marginTop="10sp"
        android:id="@+id/imageView33"
        android:layout_width="132dp"
        android:layout_height="124dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/doctorss" />

</RelativeLayout>