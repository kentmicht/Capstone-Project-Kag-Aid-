<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/info"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#efefef"
    android:orientation="vertical"
    tools:context=".SkinIllness.SkinIllnessPage">


    <ImageView
        android:id="@+id/headerBg2"
        android:layout_width="match_parent"
        android:layout_height="107dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@color/textHomepage" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@color/colorPrimary"
        tools:layout_editor_absoluteX="0dp" />


    <ImageView
        android:id="@+id/image"
        android:layout_width="248dp"
        android:layout_height="146dp"
        android:layout_above="@+id/skinIllness_name"
        android:layout_centerHorizontal="true"
        android:adjustViewBounds="true"
        android:background="@color/colorPrimary"
        android:scaleType="fitXY" />

    <ImageView
        android:id="@+id/imageView37"
        android:layout_width="43dp"
        android:layout_height="54dp"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/pageLabel2"
        android:onClick="back"
        app:srcCompat="@drawable/ic_chevron_left_black_24dp" />

    <TextView
        android:id="@+id/textView51"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/pageLabel2"
        android:layout_below="@+id/pageLabel2"
        android:text="Click skin illness to see its details."
        android:textColor="@color/textHomepage1"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteX="166dp"
        tools:layout_editor_absoluteY="61dp" />

    <TextView
        android:id="@+id/pageLabel2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="31dp"
        android:layout_marginTop="26dp"
        android:text="Skin Illnesses"
        android:textColor="@color/textHomepage1"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView30"
        android:layout_width="110dp"
        android:layout_height="108dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="27dp"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/treatment_and_illness_whitebg" />

    <TextView
        android:id="@+id/skinIllness_name"
        android:layout_width="247dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/skinIllness_desc"
        android:layout_alignParentStart="true"
        android:layout_marginStart="36dp"
        android:background="#96989b"
        android:padding="10dp"
        android:text="Skin Illness Name"
        android:textAlignment="center"
        android:textColor="#fff"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/skinIllness_desc"
        android:layout_width="249dp"
        android:layout_height="34dp"
        android:layout_above="@+id/symptoms"
        android:layout_alignParentStart="true"
        android:layout_marginStart="36dp"
        android:padding="5sp"
        android:text="No Description Available"

        android:textAlignment="textStart"
        android:textColor="@color/colorPrimary"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/copyright"
        android:layout_width="174dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="17dp"
        android:gravity="center"
        android:text="Â© 2018 Kag-Aid"
        android:textColor="@color/textHomepage1"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/symptoms"
        android:layout_width="250dp"
        android:layout_height="92dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="76dp"
        android:layout_marginStart="35dp"
        android:paddingLeft="5sp"
        android:text="Symptoms: No Description Available"
        android:textStyle="italic" />


</RelativeLayout>