<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SkinIllness.TreatmentsPage">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="107dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@color/textHomepage" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="110dp"
        android:layout_height="108dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="30dp"
        app:srcCompat="@drawable/treatments" />

    <ImageView
        android:id="@+id/imageView15"
        android:layout_width="43dp"
        android:layout_height="54dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="27dp"
        android:onClick="back"
        app:srcCompat="@drawable/ic_chevron_left_black_24dp" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="208dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/treatments_pageLabel"
        android:layout_below="@+id/treatments_pageLabel"
        android:text="Shows the treatment of the specific skin illness"
        android:textAlignment="textEnd"
        android:textColor="@color/textHomepage1" />

    <TextView
        android:id="@+id/treatments_pageLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="22dp"
        android:layout_marginTop="20dp"
        android:text="@string/treatments_page_label"
        android:textColor="@color/textHomepage1"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/skin_illness_name"
        android:layout_width="158dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/treatments_image"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="-141dp"
        android:layout_marginEnd="53dp"
        android:text="Acne"
        android:textAlignment="textStart"
        android:textColor="@color/colorPrimary"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/treatments_image"
        android:layout_width="81dp"
        android:layout_height="92dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/imageView5"
        android:layout_marginTop="141dp"
        android:paddingTop="15sp"
        app:srcCompat="@drawable/tcans" />

    <TextView
        android:id="@+id/medicine_name"
        android:layout_width="233dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/brand"
        android:layout_alignStart="@+id/brand"
        android:layout_marginBottom="-185dp"
        android:padding="4sp"
        android:text="TextView"
        android:textColor="@color/colorPrimary"
        android:textSize="14sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/brand"
        android:layout_width="243dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="122dp"
        android:layout_marginTop="185dp"
        android:padding="4sp"
        android:text="TextView"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/dosage"
        android:layout_width="248dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/treatments_image"
        android:layout_alignStart="@+id/medicine_name"
        android:padding="4sp"
        android:text="TextView"
        android:textSize="12sp" />

    <ListView
        android:id="@+id/ListViewTreatments"
        android:layout_width="406dp"
        android:layout_height="239dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="60dp" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@color/colorPrimary"
        tools:layout_editor_absoluteX="0dp" />

    <TextView
        android:id="@+id/copyright"
        android:layout_width="174dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="17dp"
        android:gravity="center"
        android:text="@string/copyright"
        android:textColor="@color/textHomepage1"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/ListViewTreatments"
        android:layout_alignStart="@+id/imageView5"
        android:text="@string/treatments_list"
        android:textColor="@color/colorPrimary"
        android:textSize="18sp"
        android:textStyle="bold|italic" />

    <TextView
        android:id="@+id/textView33"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/imageView5"
        android:layout_alignTop="@+id/skin_illness_name"
        android:paddingRight="5sp"
        android:text="Most common for: "
        android:textStyle="italic" />

</RelativeLayout>