<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/find_nearby_doctors2"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/find_nearby_doctors"
        android:onClick="openMaps"
        android:text=" "
        tools:layout_editor_absoluteX="110dp"
        tools:layout_editor_absoluteY="185dp" />

    <Button
        android:id="@+id/common_treatments2"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/find_nearby_doctors"
        android:background="@drawable/common_treatments_logo"
        android:onClick="openTreatments"
        tools:layout_editor_absoluteX="170dp"
        tools:layout_editor_absoluteY="185dp" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="133dp"
        android:layout_height="132dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        app:srcCompat="@drawable/patient_logo"
        tools:layout_editor_absoluteX="126dp"
        tools:layout_editor_absoluteY="6dp" />

    <TextView
        android:id="@+id/skin_illness_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="identified skin illnes"
        tools:layout_editor_absoluteX="75dp"
        tools:layout_editor_absoluteY="138dp" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Accuracy:"
        tools:layout_editor_absoluteX="210dp"
        tools:layout_editor_absoluteY="138dp" />

    <TextView
        android:id="@+id/skin_illness_accuracy"
        android:layout_width="29dp"
        android:layout_height="18dp"
        android:text="0%"
        tools:layout_editor_absoluteX="275dp"
        tools:layout_editor_absoluteY="138dp" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Last Scanned:"
        tools:layout_editor_absoluteX="54dp"
        tools:layout_editor_absoluteY="166dp" />

    <TextView
        android:id="@+id/datetime_scanned"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="	Aug 29, 2018	2:30:39 PM"
        tools:layout_editor_absoluteX="142dp"
        tools:layout_editor_absoluteY="166dp" />

    <Button
        android:id="@+id/ok_button"
        android:layout_width="50dp"
        android:layout_height="51dp"
        android:background="@drawable/loginshape"
        android:text="OK"
        android:textColor="@color/textHomepage"
        tools:layout_editor_absoluteX="237dp"
        tools:layout_editor_absoluteY="194dp" />
</android.support.constraint.ConstraintLayout>